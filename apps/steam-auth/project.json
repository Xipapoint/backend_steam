{
  "name": "steam-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/steam-auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "steam-auth:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "steam-auth:build:development"
        },
        "production": {
          "buildTarget": "steam-auth:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "typeorm-generate-migration": {
      "command": "ts-node -P ./tsconfig.app.json -r tsconfig-paths/register ../../tools/typeorm.custom-cli.ts migration:generate -d ./src/data-source.ts ./src/app/{args.module}/migrations/{args.name}",
      "options": {
        "cwd": "{projectRoot}"
      },
      "cache": false
    },
    "typeorm-run-migration": {
      "command": "ts-node -P ./tsconfig.app.json -r tsconfig-paths/register ../../tools/typeorm.custom-cli.ts migration:run -d ./src/data-source.ts",
      "options": {
        "cwd": "{projectRoot}"
      },
      "cache": false
    }
  }
}
